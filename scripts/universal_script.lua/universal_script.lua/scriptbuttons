local function addScriptButton(name, scriptUrl)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 340, 0, 40)
    button.Position = UDim2.new(0, 10, 0, #scriptHubFrame:GetChildren() * 50)
    button.Text = name
    button.Font = Enum.Font.Gotham
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 16
    button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    button.Parent = scriptHubFrame
    button.MouseButton1Click:Connect(function()
        loadstring(game:HttpGet(scriptUrl))()
        print("Executing script: " .. name)
    end)
end

addScriptButton("Blox Fruits Auto Farm", "https://raw.githubusercontent.com/pxngs/universal.rblx/main/scripts/universal_script.lua/blox_fruits_x.lua")
addScriptButton("Pet Simulator X", "https://raw.githubusercontent.com/pxngs/universal.rblx/main/scripts/universal_script.lua/pet_sim_x.lua")
